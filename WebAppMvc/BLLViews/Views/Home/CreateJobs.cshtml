@model BLLViews.Models.CreateJobModel

@{
    ViewBag.Title = "CreateJobs";
}
<style>
    .stCardInput {
        height: 100px;
        width: 100%;
        border-color: gray;
    }

    .stMenuleft {
        width: auto;
        margin-left: auto;
        margin-right: auto;
        margin-top: 4px;
    }

    .stTextCardHead {
        font-size: 15px;
    }

    .stTextCardFooter {
        color: red;
    }

    .stlCard {
        width: 300px;
    }

    .stbutt {
        text-align: center;
        width: 150px;
    }
    .stli{
        height:50px;
    }
</style>

<div class="text-center">
    <h1> CreateAdvertisment</h1>

</div>


@using (Html.BeginForm("CreateJobs", "Home", FormMethod.Post))
{
<div class="text-center  container">
    <div class="h-center">
        <div class="card">
            <div class="card-header stTextCardHead">
                <p> <h5> In this field, you must enter Name your project or job.</h5></p>
            </div>
            <div class="card-content p-2">
                @*@Html.TextBoxFor(x =>x.jobs, new { @class = "stCardInput", data_role = "input", data_prepend = "Name project or task: " })*@
                @*@Html.TextBoxFor(model => Model.jobs.ID, new { @type = "hidden" })*@ @*<input class="stCardInput " maxlength="3000" id="Name" Name="Name" type="text" data-role="input" data-prepend="Name project or task: ">*@
                @Html.TextBoxFor(model => Model.Name, new { @class = "cell-12", data_role = "input" })
            </div>
            <div class="card-footer stTextCardFooter">
                <p>You must fill thi field.</p> @*Valitation message*@
            </div>
        </div>

        <div class="card">
            <div class="card-header stTextCardHead">
                <p> <h5> In this field, you must enter short Description about the job or the task.</h5></p>
            </div>
            <div class="card-content p-2">
                @Html.TextBoxFor(x => x.Description, new { @class = "stCardInput", maxlength = "3000", id = "Description", Name = "Description", type = "text", data_role = "input" })
                @* <input class="stCardInput" maxlength="3000" id="Description" Name="Description" type="text" data-role="input" data-prepend="Description of project or task: ">*@
            </div>
            <div class="card-footer stTextCardFooter">
                <p>The text should be less than 30000 symbols.</p> @*Valitation message*@
            </div>
        </div>

        <div class="card">
            <div class="card-header stTextCardHead">
                <p> <h5> In this field, you must select the category in which your job or task belongs.</h5></p>
            </div>
            <div class="card-content p-2">

                @Html.DropDownListFor(x => x.CategoryID, new SelectList(Model.Categories, "Value", "Text"), new { data_role = "select" })

            </div>
            <div class="card-footer stTextCardFooter">
                <p>You must selecte category</p> @*Valitation message*@
            </div>
        </div>

        <div class="card">
            <div class="card-header stTextCardHead">
                <p><h5> In this field, you must select the City in which your job or task will be create.</h5></p>
            </div>
            <div class="card-content p-2">

                @Html.DropDownListFor(x => x.CityID, new SelectList(Model.Cities, "Value", "Text"), new { data_role = "select" })

            </div>
            <div class="card-footer stTextCardFooter">
                @*@Html.ValidationMessageFor(x => x.Cities)*@<p>You must selecte city</p> @*Valitation message*@
            </div>
        </div>
        <div class="card">
            <div class="card-header stTextCardHead">
                <p><h5> In this field, you must enter the date when you posted this Ad </h5></p>
            </div>
            <div class="card-content p-2">
                @Html.TextBoxFor(Model => Model.date, new { type = "text", data_years_before = "0", data_input_format = "%d/%m/%y", data_role = "calendarpicker" })
                @* <input class="stCardInput" maxlength="3000" id="Date" Name="Date" type="date" data-role="input" data-prepend="Enter the date for which the project will be created : ">*@
            </div>
            <div class="card-footer stTextCardFooter">
                <p>You must selecte date</p> @*Valitation message*@
            </div>
        </div>

        <div class="card">
            <div class="card-header stTextCardHead">
                <p> <h5> In this field, you must enter salary in your job or task.</h5></p>
            </div>
            <div class="card-content p-2">

                @Html.TextBoxFor(x => x.Salary, new { type = "text", data_role = "spinner", data_min_value = "5", data_max_value = "100000" })

            </div>
            <div class="card-footer stTextCardFooter">
                <p>The salary should be more than 5 unit of any currency</p> @*Valitation message*@
            </div>
        </div>
    </div>

    <div class="text-center pos-top-center">
        <div class="row">
            <div class="cell-3">

            </div>
            <button class="button alert outline cell-11 h-center stbutt">Add new AD</button>
            <div class="cell-3">

            </div>
        </div>
    </div>
</div>
}