@model BLLViews.Models.CreateJobModel

@{
    ViewBag.Title = "CreateJobs";
}
<style>
    .stCardInput {
        height: 100px;
        width: 100%;
        border-color: gray;
    }

    .stMenuleft {
        width: auto;
        margin-left: auto;
        margin-right: auto;
        margin-top: 4px;
    }

    .stTextCardHead {
        font-size: 15px;
    }

    .stTextCardFooter {
        color: red;
    }

    .stlCard {
        width: 300px;
    }

    .stbutt {
        text-align: center;
        width: 150px;
    }
    .stli{
        height:50px;
    }
</style>

<div class="text-center">
    <h1> CreateAdvertisment</h1>

</div>
<div class="float-left" style="width : 40%;">
    <div class="stMenuleft">
        <a class="button stMenuleft" style="height:70px " id="context_toggle"><h6><span class="mif-warning ani-flash"></span> Before you add your advertisement you must do few this requirements:<span class="mif-warning ani-flash"></span></h6>  </a>
