            <li class="stli"> <div class="container"><div class="row"><span class="mif-mail icon"></span>@Html.ActionLink("You must confirm your e-mail.", "Register", "Account") </div> </div> </li>
            <li class="divider"></li>
            <li class="stli"> <div class="container"><div class="row"><span class="mif-books icon"></span>@Html.ActionLink("Example AD.", "Index", "Home") </div> </div> </li>
