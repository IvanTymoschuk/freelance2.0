@model BLLViews.Models.TicketsModel
@{
    ViewBag.Title = "Requests";
}
    <style>
        .table-container {
            width: 100%;
            overflow: auto;
            -webkit-overflow-scrolling: touch;
        }
    </style>
    <div class="containe table-container ">
        <br />
        <h2 style="text-align:center">@ViewBag.Title</h2>


        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>STATUS</th>
                    <th>THEME</th>
                    <th>LAST UPDATE</th>
                    <th>LINK</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var el in Model.tickets)
                {
                    <tr>
                        <td>@el.ID</td>
                        <td>@el.Status</td>
                        <td>@el.Theme</td>
                        <td>@el.LastUpdate</td>
                        <td><a href="/support/admticket/@el.ID" class="cell-12 button alert outline" style="font-size:14px">INFO</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <hr />
        <a href="/support/PanelControl" class="cell-12 button alert outline" style="font-size:14px">BAN PANEL</a>


    </div>