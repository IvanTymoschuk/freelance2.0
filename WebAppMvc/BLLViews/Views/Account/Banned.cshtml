@model BLLViews.Models.BannedModel

@{
    ViewBag.Title = "Banned";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container text-center">
        <h2 class="text-center">Banned</h2>

        <h2 class="text-center">Hello @Model.User.UserName</h2>
        <h3 class="text-center">Your account has been banned!</h3>
        <br />
        <hr />
    </div>
    <div class="container text-center" style="font-size:28px">
        <p>Reason: <i class="fg-darkRed">@Model.Ban.Reason</i></p>
        @if (Model.Ban.IsPermanent == true)
        {
            <p>To Time: <i class="fg-darkRed">PERMANENT</i></p>
        }
        else
        {
            <p>To Time: <i class="fg-darkRed">@Model.Ban.ToDate</i></p>
        }
        <p>Time ban: <i class="fg-darkRed">@Model.Ban.DateBan</i></p>
        <p>

            <i class="text-center">You can submit an apology in <a class="fg-darkRed" href="~/support/MyTickets">support</a>! </i>
        </p>
        <hr />
    </div>
