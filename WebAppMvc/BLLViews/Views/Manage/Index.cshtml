@model BLLViews.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<p class="text-center">@ViewBag.StatusMessage</p>
<div class="container">
    <h4 class="text-center">Change your account settings</h4>
    <hr />
    @using (Html.BeginForm("Index", "Manage", FormMethod.Post))
    {
        @Html.TextBoxFor(model => Model.user.FullName, new { @class = "cell-12", data_role = "input", data_prepend = "User name: " })
        <br />
        @Html.TextBoxFor(model => Model.user.AvaPath, new { @class = "cell-12", data_role = "input", data_prepend = "Ava path: " })
        <br />
        <button class="button alert outline cell-12">SAVE</button>

    }
    <br />
    @if (Model.HasPassword)
    {
        @Html.ActionLink("Change your password", "ChangePassword","Manage",new { @class="button alert outline cell-12"})
    }
    else
    {
        @Html.ActionLink("Create", "SetPassword","Manage",new { @class="button alert outline cell-12"})
    }
</div>











